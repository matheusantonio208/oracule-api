{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@types/": ["@types/*"],
      "@modules/": ["modules/*"],
      "@config/": ["config/*"],
      "@utils/": ["utils/*"],
      "@schemas/": ["schemas/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": [".dev", "node_modules", "src/**/*.spec.ts"]
}
